generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  email     String      @unique
  password  String
  name      String
  phone     String?
  status    Boolean     @default(true)
  Assistant Assistant[]
  modules   Module[]
}

model Assistant {
  id      String @id @default("0")
  owner   User   @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Module {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
  status      Boolean
  users       User[]
}
